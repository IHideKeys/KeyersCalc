<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" maxHeight="210" maxWidth="400" minHeight="210" minWidth="300" prefHeight="210" prefWidth="300" fx:controller="keyers.dg.calc.Controller" xmlns:fx="http://javafx.com/fxml">
    <children>
        <Label alignment="TOP_CENTER" layoutX="81.0" layoutY="0.0" text="Keyers Calculator" fx:id="title">
            <font>
                <Font name="Menlo Bold" size="24.0" />
            </font>
        </Label>
        <TextField alignment="CENTER" layoutX="107.0" layoutY="50.0" prefHeight="27.0" prefWidth="194.0" promptText="RSN" fx:id="enterRSN" onAction="#onEnter">
        <font>
            <Font name="Menlo Regular" size="13.0" />
        </font>
        </TextField>
        <TextField alignment="CENTER" layoutX="107.0" layoutY="50.0" prefHeight="27.0" prefWidth="194.0"  promptText="XP or Level" fx:id="enterLvl" onAction="#onEnter">
        <font>
            <Font name="Menlo Regular" size="13.0" />
        </font>
        </TextField>
        <TextField alignment="CENTER" layoutX="107.0" layoutY="80.0" prefHeight="27.0" prefWidth="194.0"  promptText="Goal XP or Level" fx:id="goalXpField" onAction="#onEnter">
            <font>
                <Font name="Menlo Regular" size="13.0" />
            </font>
        </TextField>
        <RadioButton layoutX="316.0" layoutY="44.0" mnemonicParsing="false" text="Afk" fx:id="afkC1Selection" onAction="#onClick">
        <font>
            <Font name="Lucida Grande" size="13.0" />
        </font>
        </RadioButton>
        <RadioButton layoutX="316.0" layoutY="64.0" mnemonicParsing="false" text="Non-Afk" fx:id="nonAfkC1Selection" onAction="#onClick">
        <font>
            <Font name="Lucida Grande" size="13.0" />
        </font>
        </RadioButton>
        <RadioButton layoutX="316.0" layoutY="84.0" mnemonicParsing="false" text="Skip C1's" fx:id="c1Skipped" onAction="#onClick">
            <font>
                <Font name="Lucida Grande" size="13.0" />
            </font>
        </RadioButton>
        <RadioButton layoutX="107.0" layoutY="30.0" mnemonicParsing="false" text="RSN" fx:id="rsnSelection" onAction="#onClick">
        <font>
            <Font name="Lucida Grande" size="13.0" />
        </font>
        </RadioButton>
        <RadioButton layoutX="225.0" layoutY="30.0" mnemonicParsing="false" text="Level/XP" fx:id="xpLvlSelection" onAction="#onClick">
            <font>
                <Font name="Lucida Grande" size="13.0" />
            </font>
        </RadioButton>
        <Button layoutX="160.0" layoutY="112.0" mnemonicParsing="false" text="Calculate" fx:id="calculateButton" onAction="#calculate">
            <font>
                <Font name="Lucida Grande" size="14.0" />
            </font>
        </Button>
        <Label alignment="TOP_CENTER" layoutX="157.0" layoutY="140.0" text="" fx:id="costLabel">
            <font>
                <Font name="Lucida Grande" size="14.0"/>
            </font>
        </Label>
        <Label alignment="TOP_CENTER" layoutX="136.0" layoutY="160.0" text="" fx:id="tokensLabel">
            <font>
                <Font name="Lucida Grande" size="14.0" />
            </font>
        </Label>
        <Label alignment="TOP_CENTER" layoutX="0.0" layoutY="50.0" text="" fx:id="xpGainedLabel">
            <font>
                <Font name="Lucida Grande" size="12.0"/>
            </font>
        </Label>
        <Label alignment="TOP_CENTER" layoutX="0.0" layoutY="80.0" text="" fx:id="timeLabel">
            <font>
                <Font name="Lucida Grande" size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
